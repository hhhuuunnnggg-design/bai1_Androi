<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ThÃ´ng Tin CÃ¡ NhÃ¢n"
            android:textSize="28sp"
            android:textColor="@color/purple_primary"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.02" />

        <!-- Avatar Container with Enhanced Design -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp">

            <!-- Avatar Image Container -->
            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:elevation="8dp"
                android:background="@drawable/avatar_border">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="152dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center"
                    android:background="@drawable/avatar_background"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/change_avatar" />

            </FrameLayout>

        </FrameLayout>

        <!-- Information Card with Enhanced Design -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background"
            android:background="@drawable/card_background_enhanced">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Name Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_label"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_name"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="normal"
                        android:minHeight="28dp"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp" />

                </LinearLayout>

                <!-- Divider with Gradient Effect -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gradient_divider"
                    android:layout_marginBottom="24dp" />

                <!-- Email Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_label"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_email"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="normal"
                        android:minHeight="28dp"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Edit Button with Enhanced Design -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/edit_profile"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_background_enhanced"
            android:foreground="@drawable/ripple_effect"
            android:elevation="6dp"
            android:stateListAnimator="@null"
            android:letterSpacing="0.05"
            android:layout_marginBottom="16dp" />

        <!-- Music Player Button -->
        <Button
            android:id="@+id/btnMusic"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸŽµ Music Player"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_background_enhanced"
            android:foreground="@drawable/ripple_effect"
            android:elevation="6dp"
            android:stateListAnimator="@null"
            android:letterSpacing="0.05"
            android:layout_marginBottom="16dp" />

        <!-- Note Button -->
        <Button
            android:id="@+id/btnNote"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ“ Ghi ChÃº"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_background_enhanced"
            android:foreground="@drawable/ripple_effect"
            android:elevation="6dp"
            android:stateListAnimator="@null"
            android:letterSpacing="0.05"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>