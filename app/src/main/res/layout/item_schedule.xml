<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Subject Name -->
        <TextView
            android:id="@+id/txtSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên môn học"
            android:textSize="20sp"
            android:textColor="@color/purple_primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Subject Code -->
        <TextView
            android:id="@+id/txtSubjectCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã môn: ABC123"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gradient_divider"
            android:layout_marginBottom="12dp" />

        <!-- Time and Room -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtDayTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thứ 2, 07:00 - 09:30"
                android:textSize="15sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/txtRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P101"
                android:textSize="15sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Status and Action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chưa đến giờ học"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <Button
                android:id="@+id/btnAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm danh"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_enhanced"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
