<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    tools:context=".EditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textSize="28sp"
            android:textColor="@color/purple_primary"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:letterSpacing="0.02" />

        <!-- Avatar Container with Enhanced Design -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <!-- Avatar Image Container -->
            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:elevation="8dp"
                android:background="@drawable/avatar_border">

            <ImageView
                android:id="@+id/imgAvatarEdit"
                    android:layout_width="152dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center"
                android:background="@drawable/avatar_background"
                android:src="@drawable/ic_person"
                android:scaleType="centerCrop"
                android:contentDescription="@string/change_avatar" />

        </FrameLayout>

        </FrameLayout>

        <!-- Change Avatar Button with Enhanced Design -->
        <Button
            android:id="@+id/btnChangeAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_avatar"
            android:textSize="15sp"
            android:textColor="@color/purple_primary"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="32dp"
            android:letterSpacing="0.03" />

        <!-- Input Fields Card with Enhanced Design -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background"
            android:background="@drawable/card_background_enhanced">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Name Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_label"
                        android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="4dp" />

                <EditText
                    android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:hint="@string/hint_name"
                        android:inputType="textPersonName"
                        android:textSize="17sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="#999999"
                        android:background="@drawable/edit_text_background_enhanced"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:importantForAutofill="no"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <!-- Email Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_label"
                        android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="4dp" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:minHeight="56dp"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                        android:textSize="17sp"
                    android:textColor="@color/text_primary"
                        android:textColorHint="#999999"
                        android:background="@drawable/edit_text_background_enhanced"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:importantForAutofill="no"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Save Button with Enhanced Design -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/save_profile"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_background_enhanced"
            android:foreground="@drawable/ripple_effect"
            android:elevation="6dp"
            android:stateListAnimator="@null"
            android:letterSpacing="0.05"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
